{
  "rules": {
    // Curriculum - read/write by all authenticated users
    "curriculum": {
      ".read": "auth != null",
      ".write": "auth != null"
    },

    // Quizzes - read/write by all authenticated users
    "quizzes": {
      ".read": "auth != null",
      ".write": "auth != null"
    },

    // Quiz results - read/write by all authenticated users
    "quiz-results": {
      ".read": "auth != null",
      ".write": "auth != null"
    },

    // User profiles - all authenticated users can read, users can write their own
    "users": {
      ".read": "auth != null",
      "$userId": {
        ".write": "auth != null && auth.uid == $userId"
      }
    },

    // Assignments - all authenticated users can read/write
    "assignments": {
      ".read": "auth != null",
      "$userId": {
        ".write": "auth != null"
      }
    },

    // Reading assignments - all authenticated users can read/write
    "reading-assignments": {
      ".read": "auth != null",
      ".write": "auth != null"
    },

    // Books cache - read/write by all authenticated users
    "books-cache": {
      ".read": "auth != null",
      ".write": "auth != null"
    },

    // Todos - all authenticated users can read/write
    "todos": {
      ".read": "auth != null",
      "$userId": {
        ".write": "auth != null"
      }
    },

    // User roles - read by all authenticated, write by all authenticated
    "user-roles": {
      ".read": "auth != null",
      ".write": "auth != null"
    },

    // AI usage logs - read/write by all authenticated
    "ai-usage-logs": {
      ".read": "auth != null",
      ".write": "auth != null"
    },

    // Config - read/write by all authenticated users
    "config": {
      ".read": "auth != null",
      ".write": "auth != null"
    },

    // AI quiz requests - authenticated users can write
    "ai-quiz-requests": {
      ".read": "auth != null",
      ".write": "auth != null"
    },

    // AI quiz results - authenticated users can read
    "ai-quiz-results": {
      ".read": "auth != null",
      ".write": "auth != null"
    }
  }
}
